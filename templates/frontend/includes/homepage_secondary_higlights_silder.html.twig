<div id="{{ highlights_carousel_id }}" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        {% for activity in secondaryHighlights %}
            <div class="carousel-item{% if loop.first %} active{% endif %}">
                <svg class="bd-placeholder-img bd-placeholder-img-lg d-block w-100" width="800" height="400" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Third slide">
                    <title>{{ activity.name }}</title>
                    <rect width="100%" height="100%" fill="#555"></rect>
                    <text x="35%" y="40%" fill="#FFF" dy=".3em">{{ activity.name }}</text>
                    <text x="35%" y="50%" fill="#FFF" dy=".2em">{{ activity.shortDescription }}</text>
                </svg>
{#                <img src="{{ asset('build/abstract-abstraction.png') }}" class="d-block w-100" alt="...">#}
{#                <div class="carousel-caption d-none d-md-block">#}
{#                    <h5>{{ collaborator.fullname }}</h5>#}
{#                    <p>{{ collaborator.shortDescription }}</p>#}
{#                </div>#}
            </div>
        {% endfor %}
        <a class="carousel-control-prev" href="#{{ highlights_carousel_id }}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">{{ 'front.carrousel.previous' | trans }}</span>
        </a>
        <a class="carousel-control-next" href="#{{ highlights_carousel_id }}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">{{ 'front.carrousel.next' | trans }}</span>
        </a>
    </div>
</div>
