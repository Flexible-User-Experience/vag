{% for partner in partners %}
    <div class="{% if mode == 'partners' %}col-6 col-sm-4 mb-3{% else %}col-4 col-sm-3 mb-3{% endif %}">
        <div class="card">
            {% if partner.imageName %}
                {% if partner.link %}
                    <a href="{{ partner.link }}" target="_blank">
                        <img src="{% if mode == 'partners' %}{{ vich_uploader_asset(partner, 'imageFile') | imagine_filter('480x480_inset') }}{% else %}{{ vich_uploader_asset(partner, 'imageFile') | imagine_filter('480x480_BW_inset') }}{% endif %}" class="card-img-top" alt="{{ partner.name }}">
                    </a>
                {% else %}
                    <img src="{% if mode == 'partners' %}{{ vich_uploader_asset(partner, 'imageFile') | imagine_filter('480x480_inset') }}{% else %}{{ vich_uploader_asset(partner, 'imageFile') | imagine_filter('480x480_BW_inset') }}{% endif %}" class="card-img-top" alt="{{ partner.name }}">
                {% endif %}
            {% endif %}
            <h5 class="card-title sr-only">{{ partner.name }}</h5>
        </div>
    </div>
{% else %}
    <div class="col-12">
        <div class="alert alert-warning mb-0" role="alert">
            <i class="fa exclamation-triangle"></i> {{ 'front.events.empty_warning' | trans }}
        </div>
    </div>
{% endfor %}
