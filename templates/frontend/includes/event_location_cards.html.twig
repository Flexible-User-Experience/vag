{% for location in locations if location.showInHomepage %}
    <div class="col-6 col-md-4">
        <div class="card mt-3">
            {% if location.imageName %}
                <img src="{{ vich_uploader_asset(location, 'imageFile') | imagine_filter('480xY') }}" class="card-img-top" alt="{{ location.place }}">
            {% endif %}
            <div class="card-body">
                {% if not location.isTourismMarketResource %}
                    <h6 class="card-title mb-0">{{ location.place }}</h6>
                    {% if location.eventActivities | length > 1 %}
                        <span class="badge badge-dark">{{ location.eventActivities | length }} {{ 'front.events.activities' | trans | lower }}</span>
                        <br>
                    {% endif %}
                    <a href="{{ path('front_location_detail', {slug: location.slug}) }}" class="btn btn-warning btn-sm mt-4">{{ 'front.events.read_more' | trans }}</a>
                {% else %}
                    <h6 class="card-title mb-0">{{ location.place }}</h6>
                    <p class="text-muted mb-0">{{ location.description }}</p>
                {% endif %}
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12">
        <div class="alert alert-warning mb-0" role="alert">
            <i class="fa exclamation-triangle"></i> {{ 'front.events.empty_warning' | trans }}
        </div>
    </div>
{% endfor %}
