{% for location in locations %}
    <div class="col-12 col-md-6 col-lg-4 col-xl-3">
        <div class="card mt-3">
            {% if location.imageName %}
                <a href="{{ path('front_location_detail', {slug: location.slug}) }}">
                    <img src="{{ vich_uploader_asset(location, 'imageFile') | imagine_filter('800x600') }}" class="card-img-top" alt="{{ location.place }}">
                </a>
            {% endif %}
            <div class="card-body">
                {% if not location.isTourismMarketResource %}
                    <h6 class="card-title mb-0">{{ location.place }}</h6>
                    {% if location.eventActivities | length > 0 %}
                        <span class="badge badge-primary">{{ location.eventActivities | length }} {{ 'front.events.activities_choice' | transchoice(location.eventActivities | length) | lower }}</span>
                        <br>
                    {% endif %}
                {% else %}
                    <h6 class="card-title mb-0">{{ location.place }}</h6>
                    <p class="text-muted mb-0">{{ location.description }}</p>
                {% endif %}
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12">
        <div class="alert alert-warning mb-0" role="alert">
            <i class="fa exclamation-triangle"></i> {{ 'front.events.empty_warning' | trans }}
        </div>
    </div>
{% endfor %}
