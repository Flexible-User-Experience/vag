{% extends "frontend/base.html.twig" %}

{% block title %}{{ parent() }} Â· Xmas'19{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid jumbotron-homepage" style="background-image:url('{{ asset('build/creative-light-abstract-glowing.png') }}');">
        <div class="container pt-2 pb-1">
            <h1 class="display-6 text-white">
                <nav aria-label="breadcrumb mb-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">Xmas'19</li>
                    </ol>
                </nav>
            </h1>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid mb-0 jumbotron-light">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div id="carouselXmas19" class="carousel slide carousel-fade" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for i in 1..62 %}
                                {% set img_name = i %}
                                {% if i < 10 %}
                                    {% set img_name = '0' ~ img_name %}
                                {% endif %}
                                <div class="carousel-item{% if i == 1 %} active{% endif %}">
                                    <img src="{{ asset('build/xp19/' ~ img_name ~ '.jpg') }}" class="d-block w-100" alt="image {{ img_name }}">
                                </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselXmas19" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselXmas19" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
