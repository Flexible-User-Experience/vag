{% extends "frontend/base.html.twig" %}

{% block body %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">{{ category.name }}</h1>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for activity in activities %}
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ activity.name }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ activity.location }}</h6>
                            <p class="card-text">{{ activity.shortDescription }}</p>
                            <a href="#" class="btn btn-warning btn-sm">Read more</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-sm-12">
                    <div class="alert alert-warning" role="alert">
                        <i class="fa fa-warning"></i> coming soon, be patient...
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
