{% extends "frontend/base.html.twig" %}

{% block title %}{{ parent() }} · {{ 'front.menu.tickets' | trans | title }}{% endblock %}

{% block javascripts_head %}
    <script src="https://www.eventbrite.com/static/widgets/eb_widgets.js"></script>
{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid jumbotron-homepage" style="background-image:url('{{ asset('build/background-blur-bokeh-close-up.png') }}');">
        <div class="container pt-2 pb-1">
            <h1 class="display-6 text-white">{{ 'front.menu.tickets' | trans | title }}</h1>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid jumbotron-light">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-dark mb-0">
                            <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col" class="text-center">{{ 'front.calendar.friday' | trans }} {{ firstFridayConference.begin | draw_i18n_date_string }}</th>
                                <th scope="col" class="text-center" colspan="2">{{ 'front.calendar.saturday' | trans }} {{ firstSaturdayWorkshop.begin | draw_i18n_date_string }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="bg-info">
                                <th scope="row" class="text-center"></th>
                                <th scope="row" class="text-center">{{ 'front.calendar.morning' | trans }}</th>
                                <th scope="row" colspan="2" class="text-center">{{ 'front.calendar.morning' | trans }}</th>
                            </tr>
                            <tr>
                                <th scope="row" rowspan="4" class="text-center align-middle">
                                    10:00h<br>
                                    {{ 'front.calendar.to' | trans }}<br>
                                    12:00h
                                </th>
                                <td rowspan="4"></td>
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: firstSaturdayWorkshop, show_tickets_button: true, colspan: 2} %}
                            </tr>
                            <tr>
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: secondSaturdayWorkshop, show_tickets_button: true, colspan: 2} %}
                            </tr>
                            <tr>
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: thirdSaturdayWorkshop, show_tickets_button: true, colspan: 2} %}
                            </tr>
                            <tr>
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: fourthSaturdayWorkshop, show_tickets_button: true, colspan: 2} %}
                            </tr>
                            <tr class="bg-info">
                                <th scope="row" class="text-center"></th>
                                <th scope="row" class="text-center">{{ 'front.calendar.afternoon' | trans }}</th>
                                <th scope="row" colspan="2" class="text-center">{{ 'front.calendar.afternoon' | trans }}</th>
                            </tr>
                            <tr>
                                <th scope="row" class="text-center align-middle">
                                    16:00h<br>
                                    {{ 'front.calendar.to' | trans }}<br>
                                    18:00h
                                </th>
                                <td style="width:31%"></td>
                                <td style="width:31%"></td>
                                <td rowspan="5" style="width:31%">
                                    <div class="media">
                                        <a href="{{ path('front_event_activity', {category: saturdayGameJam.category.slug, activity: saturdayGameJam.slug}) }}">
                                            <img src="{{ vich_uploader_asset(saturdayGameJam, 'imageFile') | imagine_filter('60x60') }}" class="mr-3 img-fluid rounded" alt="{{ saturdayGameJam.name }} logo">
                                        </a>
                                        <div class="media-body">
                                            {{ saturdayGameJam.name | truncate(55) }}<br>
                                            <a href="{{ path('front_location_detail', {slug: saturdayGameJam.location.slug}) }}"><span class="badge badge-primary"><i class="fas fa-map-marker-alt"></i> {{ saturdayGameJam.location.place }}</span></a>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-center align-middle">
                                    18:00h<br>
                                    {{ 'front.calendar.to' | trans }}<br>
                                    18:30h
                                </th>
                                <td></td>
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: firstSaturdayConference, show_tickets_button: false} %}
                            </tr>
                            <tr>
                                <th scope="row" class="text-center align-middle">
                                    18:30h<br>
                                    {{ 'front.calendar.to' | trans }}<br>
                                    19:20h
                                </th>
                                <td></td>
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: secondSaturdayConference, show_tickets_button: false} %}
                            </tr>
                            <tr>
                                <th scope="row" class="text-center align-middle">
                                    19:20h<br>
                                    {{ 'front.calendar.to' | trans }}<br>
                                    19:30h
                                </th>
                                <td>
                                    <i class="fas fa-rocket"></i> {{ 'front.calendar.inaguration' | trans }}<br>
                                    <span class="badge badge-primary"><i class="fas fa-map-marker-alt"></i> {{ firstFridayConference.location.place }}</span>
                                </td>
                                <td class="text-muted text-center align-middle"><i class="fas fa-coffee"></i> {{ 'front.calendar.pause' | trans }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-center align-middle">
                                    19:30h<br>
                                    {{ 'front.calendar.to' | trans }}<br>
                                    20:00h
                                </th>
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: firstFridayConference, show_tickets_button: false} %}
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: saturdayDocumentaryFilm, show_tickets_button: false} %}
                            </tr>
                            <tr>
                                <th scope="row" class="text-center align-middle">
                                    20:00h<br>
                                    {{ 'front.calendar.to' | trans }}<br>
                                    21:00h
                                </th>
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: secondFridayConference, show_tickets_button: false} %}
                                {% include "frontend/includes/timetable_ticket_cell.html.twig" with {item: saturdayRoundTable, show_tickets_button: false} %}
                            </tr>
                            <tr>
                                <th scope="row" class="text-center align-middle"></th>
                                <td>
                                    {% if firstFridayConference.eventbriteId %}
                                        <button id="eventbrite-button-id-{{ firstFridayConference.eventbriteId }}" class="btn btn-warning" type="button" data-toggle="modal"><i class="fas fa-ticket-alt"></i> {{ 'front.homepage.lock_entrance_friday_opening' | trans }} · 0 €</button>
                                        <script type="text/javascript">
                                            window.EBWidgets.createWidget({
                                                widgetType: "checkout",
                                                eventId: "{{ firstFridayConference.eventbriteId }}",
                                                modal: true,
                                                modalTriggerElementId: "eventbrite-button-id-{{ firstFridayConference.eventbriteId }}",
                                            });
                                        </script>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if saturdayRoundTable.eventbriteId %}
                                        <button id="eventbrite-button-id-{{ saturdayRoundTable.eventbriteId }}" class="btn btn-warning" type="button" data-toggle="modal"><i class="fas fa-ticket-alt"></i> {{ 'front.homepage.lock_entrance_saturday_conferences' | trans }} · 0 €</button>
                                        <script type="text/javascript">
                                            window.EBWidgets.createWidget({
                                                widgetType: "checkout",
                                                eventId: "{{ saturdayRoundTable.eventbriteId }}",
                                                modal: true,
                                                modalTriggerElementId: "eventbrite-button-id-{{ saturdayRoundTable.eventbriteId }}",
                                            });
                                        </script>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if saturdayGameJam.eventbriteId %}
                                        <button id="eventbrite-button-id-{{ saturdayGameJam.eventbriteId }}" class="btn btn-warning" type="button" data-toggle="modal"><i class="fas fa-ticket-alt"></i> {{ 'front.homepage.lock_entrance_saturday_gamejam' | trans }} · 0 €</button>
                                        <script type="text/javascript">
                                            window.EBWidgets.createWidget({
                                                widgetType: "checkout",
                                                eventId: "{{ saturdayGameJam.eventbriteId }}",
                                                modal: true,
                                                modalTriggerElementId: "eventbrite-button-id-{{ saturdayGameJam.eventbriteId }}",
                                            });
                                        </script>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr class="bg-info">
                                <th scope="row" class="text-center"></th>
                                <th scope="row" class="text-center">{{ 'front.calendar.night' | trans }}</th>
                                <th scope="row" colspan="2" class="text-center">{{ 'front.calendar.night' | trans }}</th>
                            </tr>
                            <tr>
                                <th scope="row" class="text-center align-middle">
                                    22:30h<br>
                                    {{ 'front.calendar.to' | trans }}<br>
                                    23:30h
                                </th>
                                {% include "frontend/includes/timetable_ticket_cell_not_embeded.html.twig" with {item: fridayShow, show_tickets_button: true} %}
                                <td class="text-center align-middle" colspan="2"><i class="far fa-question"></i></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
