{% extends "frontend/base.html.twig" %}

{% block body %}
    <div class="jumbotron jumbotron-fluid jumbotron-homepage" style="background-image:url('{{ asset('build/background-blur-bokeh-close-up.png') }}');">
        <div class="container">
            <h1 class="display-6 text-white">{{ 'front.menu.team' | trans | title }}</h1>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid jumbotron-dark">
        <div class="container">
            <div class="row">
                {% if members | length > 0 %}
                    {% for member in members %}
                        <div class="col-6 col-sm-4">
                            <div class="card">
                                <img src="{{ vich_uploader_asset(member, 'imageFile') | imagine_filter('480xY') }}" class="card-img-top" alt="{{ member.fullname }}">
                                <div class="card-body">
                                    <h5 class="card-title">{{ member.fullname }}</h5>
                                    {% if member.job %}
                                        <p class="card-text">{{ member.job }}</p>
                                    {% endif %}
                                    {% if member.link %}
                                        <a href="{{ member.link }}">{{ member.link }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-sm-12">
                        <div class="alert alert-warning mb-0" role="alert">
                            <i class="fa exclamation-triangle"></i> {{ 'front.events.empty_warning' | trans }}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
