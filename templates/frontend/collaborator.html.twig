{% extends "frontend/base.html.twig" %}

{% block body %}
    <div class="jumbotron jumbotron-fluid jumbotron-homepage" style="background-image:url('{{ asset('build/creative-light-abstract-glowing.png') }}');">
        <div class="container pt-2 pb-1">
            <h1 class="display-6 text-white">
                <nav aria-label="breadcrumb mb-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('front_participants') }}">{{ 'front.events.speakers' | trans | title }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ participant.fullname }}</li>
                    </ol>
                </nav>
            </h1>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid mb-0">
        <div class="container">
            <div class="row">
                {% if participant.imageName %}
                    <div class="col-3">
                        <img src="{{ vich_uploader_asset(participant, 'imageFile') | imagine_filter('480xY') }}" class="img-responsive rounded w-100" alt="{{ participant.fullname }}">
                    </div>
                {% endif %}
                <div class="col-9">
                    <h5 class="text-muted mt-0">{{ participant.shortDescription }}</h5>
                    <p class="mb-2">{{ participant.description }}</p>
                    {% if participant.link %}
                        <a href="{{ participant.link }}" target="_blank">{{ participant.link }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {# Activities section #}
    <div class="jumbotron jumbotron-fluid jumbotron-light">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h5 class="mt-0">{{ 'front.events.activities' | trans }}</h5>
                </div>
                {% include "frontend/includes/event_activity_cards.html.twig" with {activities: participant.eventActivities} %}
            </div>
        </div>
    </div>
{% endblock %}
