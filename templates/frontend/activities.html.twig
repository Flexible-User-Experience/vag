{% extends "frontend/base.html.twig" %}

{% block title %}{{ parent() }} Â· {{ 'front.events.activities' | trans | title }}{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid jumbotron-homepage" style="background-image:url('{{ asset('build/creative-light-abstract-glowing.png') }}');">
        <div class="container pt-2 pb-1">
            <h1 class="display-6 text-white">
                <nav aria-label="breadcrumb mb-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">{{ 'front.events.activities' | trans | title }}</li>
                    </ol>
                </nav>
            </h1>
        </div>
    </div>
    {% for category in categories %}
        {# Activity section #}
        <div class="jumbotron jumbotron-fluid mb-0{% if loop.index % 2 == 0 %} jumbotron-light{% endif %}">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h5 class="mt-0">{{ category.name | title }}</h5>
                    </div>
                    {% include "frontend/includes/event_activity_cards.html.twig" with {activities: activities[category.slug]} %}
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
